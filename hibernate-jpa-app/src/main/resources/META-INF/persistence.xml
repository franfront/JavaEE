<?xml version="1.0" encoding="utf-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="ejemploJPA" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.ffernandez.hibernateapp.entity.Cliente</class>
        <properties>
            <property name="javakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/java_curso"/>
            <property name="javakarta.persistence.jdbc.user" value="root"/>
            <property name="javakarta.persistence.jdbc.password" value="prueba123456"/>
            <property name="javakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>